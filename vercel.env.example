# Vercel Environment Variables Configuration
# Copy these to your Vercel project settings

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=NairaGuard
APP_VERSION=1.0.0
ENVIRONMENT=production

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*

# =============================================================================
# DATABASE CONFIGURATION (Optional for Vercel)
# =============================================================================
# Note: Vercel serverless functions don't support persistent databases
# Consider using Vercel Postgres or external database service
DATABASE_URL=sqlite:///./fake_naira_detection.db
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# =============================================================================
# ML MODEL SETTINGS (Optional for Vercel)
# =============================================================================
# Note: Large ML models may not work on Vercel serverless
MODEL_PATH=models/saved/mobilenet_best_fixed.h5
MODEL_TYPE=keras
MODEL_STATUS=mock

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# VERCEL SPECIFIC SETTINGS
# =============================================================================
VERCEL_ENV=production
VERCEL_URL=https://your-app.vercel.app
VERCEL_REGION=iad1

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# REDIS_URL=redis://localhost:6379
# CELERY_BROKER_URL=redis://localhost:6379
# SENDGRID_API_KEY=your-sendgrid-key
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
