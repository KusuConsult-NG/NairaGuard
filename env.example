# Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Fake Naira Detection"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development)
DATABASE_URL="sqlite:///./fake_naira_detection.db"

# PostgreSQL (Production)
# DATABASE_URL="postgresql://username:password@localhost:5432/fake_naira_detection"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"
ALLOWED_EXTENSIONS=".jpg,.jpeg,.png,.gif,.bmp,.webp"

# =============================================================================
# MACHINE LEARNING MODEL
# =============================================================================
MODEL_PATH="models/pretrained/naira_detection_v1.h5"
CONFIDENCE_THRESHOLD=0.8
MODEL_BACKBONE="resnet50"  # resnet50, efficientnet

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://your-frontend-domain.com"
ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
ALLOWED_HEADERS="*"

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS=true
FROM_EMAIL="noreply@fakenairadetection.com"

# =============================================================================
# SMS CONFIGURATION (Optional)
# =============================================================================
SMS_PROVIDER="twilio"  # twilio, africastalking, etc.
SMS_API_KEY="your-sms-api-key"
SMS_API_SECRET="your-sms-api-secret"
SMS_FROM_NUMBER="+1234567890"

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="fake-naira-detection-uploads"

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_BUCKET_NAME="fake-naira-detection-uploads"
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account.json"

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Sentry (Error tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Logging
LOG_FILE="logs/app.log"
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=1800  # 30 minutes in seconds

# =============================================================================
# API DOCUMENTATION
# =============================================================================
API_TITLE="Fake Naira Detection API"
API_DESCRIPTION="AI-powered counterfeit naira note detection system"
API_VERSION="1.0.0"
CONTACT_NAME="API Support"
CONTACT_EMAIL="support@fakenairadetection.com"
CONTACT_URL="https://fakenairadetection.com"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload for development
RELOAD=true
HOST="0.0.0.0"
PORT=8000

# Frontend development server
FRONTEND_URL="http://localhost:3000"
FRONTEND_PORT=3000

# =============================================================================
# TESTING SETTINGS
# =============================================================================
TEST_DATABASE_URL="sqlite:///./test_fake_naira_detection.db"
TEST_MODEL_PATH="models/pretrained/test_model.h5"
TEST_UPLOAD_DIR="test_uploads"

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Docker
DOCKER_IMAGE_NAME="fake-naira-detection"
DOCKER_TAG="latest"

# Kubernetes
KUBERNETES_NAMESPACE="fake-naira-detection"
KUBERNETES_REPLICAS=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_BATCH_PROCESSING=true
ENABLE_API_RATE_LIMITING=true
ENABLE_DETECTION_HISTORY=true
